# CareDroid Environment Configuration
# Copy to .env and update values

# ================================
# Application
# ================================
NODE_ENV=development
PORT=8000
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# ================================
# Database (SQLite - Dev, PostgreSQL - Prod)
# ================================
DATABASE_CLIENT=sqlite
SQLITE_PATH=caredroid.sqlite

# PostgreSQL (Production)
# DATABASE_CLIENT=postgres
# DATABASE_URL=postgresql://user:password@localhost:5432/caredroid

# ================================
# Security
# ================================
JWT_SECRET=change_this_to_32_character_random_string_in_production
ENCRYPTION_KEY=change_this_to_32_byte_hex_key_for_aes_256_0123456789ABCDEF

# ================================
# Authentication (Optional)
# ================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ================================
# OpenAI (Optional - for real LLM)
# ================================
OPENAI_API_KEY=

# ================================
# Firebase (Optional - for analytics in production)
# ================================
FIREBASE_API_KEY=
FIREBASE_PROJECT_ID=

# ================================
# Feature Flags
# ================================
FEATURE_VOICE_COMMANDS=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS=true
