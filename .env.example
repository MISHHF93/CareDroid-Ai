# CareDroid Environment Configuration
# Copy to .env and update values

# ================================
# Application & Server
# ================================
NODE_ENV=development
PORT=8000
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_APP_NAME=CareDroid Clinical AI
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_BUILD_DATE=2026-01-31

# ================================
# Frontend Feature Flags (VITE_*)
# ================================
VITE_ENABLE_CRASH_REPORTING=true
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_DEBUG=false

VITE_ENABLE_ANALYTICS=true
VITE_SEGMENT_WRITE_KEY=

VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_BIOMETRIC_AUTH=true
VITE_DEV_BEARER_TOKEN=dev-token-for-testing

# ================================
# OpenAI (Optional - for real LLM)
# ================================
VITE_OPENAI_API_KEY=
VITE_OPENAI_MODEL=gpt-4

# ================================
# Firebase (Optional - for analytics in production)
# ================================
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=
VITE_FIREBASE_VAPID_KEY=

# ================================
# Legal URLs
# ================================
VITE_PRIVACY_POLICY_URL=http://localhost:8000/privacy
VITE_TERMS_OF_SERVICE_URL=http://localhost:8000/terms
VITE_SUPPORT_URL=http://localhost:8000/support
VITE_HIPAA_BAA_URL=http://localhost:8000/hipaa-baa