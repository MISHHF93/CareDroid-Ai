# CareDroid Environment Configuration
# Copy to .env and update values

# ================================
# Application
# ================================
NODE_ENV=development
PORT=8000
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# ================================
# Database (SQLite - Dev, PostgreSQL - Prod)
# ================================
DATABASE_CLIENT=sqlite
SQLITE_PATH=caredroid.sqlite

# PostgreSQL (Production)
# DATABASE_CLIENT=postgres
# DATABASE_URL=postgresql://user:password@localhost:5432/caredroid

# ================================
# Security
# ================================
JWT_SECRET=change_this_to_32_character_random_string_in_production
ENCRYPTION_KEY=change_this_to_32_byte_hex_key_for_aes_256_0123456789ABCDEF

# ================================
# Authentication (Optional)
# ================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ================================
# OpenAI (Optional - for real LLM)
# ================================
OPENAI_API_KEY=

# ================================
# Firebase (Optional - for analytics in production)
# ================================
FIREBASE_API_KEY=
FIREBASE_PROJECT_ID=

# ================================
# Feature Flags
# ================================
FEATURE_VOICE_COMMANDS=true
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS=true
# ================================
# Monitoring & Observability (Batch 13)
# ================================

# Sentry Error Tracking
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_DAYS_COMBINED=7
LOG_MAX_DAYS_ERRORS=14
LOG_MAX_DAYS_PROD_COMBINED=30
LOG_MAX_DAYS_PROD_ERRORS=60

# Monitoring Stack (Docker Compose)
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PASSWORD=admin
GRAFANA_USER=admin
GRAFANA_PORT=3001

# Kibana (Elasticsearch UI)
KIBANA_PORT=5601

# Sentry (Local Instance)
SENTRY_SECRET_KEY=your-secret-key-change-in-production
SENTRY_LOCAL_PORT=9000

# Redis (for Sentry and caching)
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# Database (PostgreSQL for Sentry)
DB_NAME=caredroid
DB_USER=postgres
DB_PASSWORD=secure123
DB_PORT=5432

# Mail (for Sentry notifications)
MAIL_HOST=localhost
MAIL_PORT=1025

# ================================
# Alert Integrations (Batch 13 Phase 2)
# ================================

# Alertmanager Configuration
ALERTMANAGER_RESOLVE_TIMEOUT=5m

# Slack Alert Integration
# Get webhook URL from: https://api.slack.com/messaging/webhooks
ALERTMANAGER_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Alert Integration (SMTP)
ALERTMANAGER_EMAIL_FROM=alerts@caredroid.local
ALERTMANAGER_EMAIL_TO=ops@caredroid.local
ALERTMANAGER_SMTP_HOST=localhost
ALERTMANAGER_SMTP_PORT=25
ALERTMANAGER_SMTP_USER=
ALERTMANAGER_SMTP_PASSWORD=

# PagerDuty Integration
# Get integration key: https://yoursubdomain.pagerduty.com/integrations
ALERTMANAGER_PAGERDUTY_KEY=