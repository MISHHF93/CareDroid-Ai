# CareDroid Production Environment Variables

# ================================
# APPLICATION
# ================================
NODE_ENV=development
APP_NAME=CareDroid Clinical Companion
APP_URL=http://localhost:5173
API_URL=http://localhost:3000

# ================================
# DATABASE (PostgreSQL)
# ================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/caredroid_dev
DATABASE_SSL=false
DATABASE_LOGGING=true

# Redis (Session & Cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# ================================
# AUTHENTICATION & SECURITY
# ================================
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET_KEY_MIN_32_CHARS
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Session
SESSION_SECRET=CHANGE_THIS_IN_PRODUCTION_ANOTHER_STRONG_SECRET
SESSION_MAX_AGE=604800000

# Encryption (AES-256)
ENCRYPTION_KEY=CHANGE_THIS_32_BYTE_HEX_KEY_FOR_AES_256_ENCRYPTION_0123456789ABCDEF
ENCRYPTION_ALGORITHM=aes-256-gcm

# Password Hashing
BCRYPT_ROUNDS=12

# ================================
# OAUTH PROVIDERS
# ================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:3000/auth/linkedin/callback

# ================================
# TWO-FACTOR AUTHENTICATION (2FA)
# ================================
TOTP_ISSUER=CareDroid
TOTP_WINDOW=2

# ================================
# EMAIL SERVICE
# ================================
# SendGrid / AWS SES / Postmark
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@caredroid.ai
SMTP_FROM_NAME=CareDroid Clinical Companion

# Email verification
EMAIL_VERIFICATION_EXPIRES=24h
PASSWORD_RESET_EXPIRES=1h

# ================================
# STRIPE PAYMENT PROCESSING
# ================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_PRO_MONTHLY=price_1234567890abcdef
STRIPE_PRICE_ID_PRO_YEARLY=price_abcdef1234567890
STRIPE_PRICE_ID_INSTITUTIONAL=price_institutional_custom

# ================================
# OPENAI API
# ================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Rate Limiting (per user per day)
OPENAI_FREE_TIER_LIMIT=10
OPENAI_PRO_TIER_LIMIT=1000
OPENAI_INSTITUTIONAL_TIER_LIMIT=10000

# ================================
# COMPLIANCE & AUDIT
# ================================
# HIPAA Audit Log Retention (days)
AUDIT_LOG_RETENTION=2555

# Data Export/Deletion (GDPR compliance)
GDPR_EXPORT_RETENTION=90
GDPR_DELETION_GRACE_PERIOD=30

# Session Timeout (minutes)
SESSION_IDLE_TIMEOUT=30
SESSION_ABSOLUTE_TIMEOUT=480

# ================================
# RATE LIMITING & SECURITY
# ================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_RESPONSES=false

# Anti-Bot Protection
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# ================================
# FILE STORAGE
# ================================
# AWS S3 or compatible (for clinical images, exports)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=caredroid-prod-storage
AWS_S3_ENCRYPTION=AES256

# ================================
# MONITORING & LOGGING
# ================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# DataDog / New Relic
DATADOG_API_KEY=your-datadog-api-key
DD_AGENT_HOST=localhost
DD_TRACE_AGENT_PORT=8126

# ================================
# CORS & SECURITY HEADERS
# ================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Content Security Policy
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';

# ================================
# FEATURE FLAGS
# ================================
FEATURE_INSTITUTIONAL_PORTAL=true
FEATURE_FHIR_INTEGRATION=false
FEATURE_HL7_MESSAGING=false
FEATURE_DICOM_VIEWER=false
FEATURE_VOICE_INTERFACE=true

# ================================
# MEDICAL DATA INTEGRATIONS
# ================================
# FHIR Server (future)
FHIR_SERVER_URL=
FHIR_AUTH_TOKEN=

# HL7 Interface Engine
HL7_INTERFACE_HOST=
HL7_INTERFACE_PORT=

# DICOM PACS
DICOM_AE_TITLE=
DICOM_HOST=
DICOM_PORT=
