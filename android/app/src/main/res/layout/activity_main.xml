<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- App Logo/Title -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CareDroid"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/neonCyan"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clinical Assistant - Native Android"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_test_backend"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@color/surfaceColor"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:text="Initializing..."
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- Test Backend Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_test_backend"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Test Backend Connection"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
