# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=3000
APP_URL=https://caredroid.com
FRONTEND_URL=https://app.caredroid.com

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=caredroid
DATABASE_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DATABASE_NAME=caredroid_production

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE

# JWT
JWT_SECRET=YOUR_JWT_SECRET_HERE_MIN_32_CHARS
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_HERE_MIN_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.caredroid.com/auth/google/callback

# OAuth - LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=https://api.caredroid.com/auth/linkedin/callback

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_PRO=price_pro_monthly
STRIPE_PRICE_INSTITUTIONAL=price_institutional_custom

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@caredroid.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=CareDroid <noreply@caredroid.com>

# Encryption (AES-256)
ENCRYPTION_KEY=YOUR_32_BYTE_HEX_ENCRYPTION_KEY_HERE
ENCRYPTION_ALGORITHM=aes-256-gcm

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/caredroid/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# Security
CORS_ORIGIN=https://app.caredroid.com
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
HELMET_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=caredroid-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
