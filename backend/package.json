{
  "name": "CareDroid-Ai-Backend",
  "version": "1.0.0",
  "description": "HIPAA-compliant backend for CareDroid-AI - Tool Orchestration, Emergency Escalation, RBAC",
  "author": "CareDroid Team",
  "private": true,
  "license": "PROPRIETARY",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "PORT=8000 nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "perf:health": "npx autocannon -c 50 -d 20 http://localhost:8000/health",
    "typeorm": "typeorm-ts-node-commonjs -d src/data-source.ts",
    "migration:generate": "typeorm-ts-node-commonjs -d src/data-source.ts migration:generate",
    "migration:run": "typeorm-ts-node-commonjs -d src/data-source.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d src/data-source.ts migration:revert",
    "seed": "ts-node src/database/seeds/run-seeds.ts",
    "ingest": "ts-node scripts/ingest-documents.ts",
    "verify:tls": "node scripts/verify-tls.js"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/throttler": "^5.1.0",
    "@nestjs/typeorm": "^10.0.1",
    "@pinecone-database/pinecone": "^6.1.4",
    "@sentry/node": "^7.91.0",
    "axios": "^1.13.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "dd-trace": "^5.37.0",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.6.0",
    "glob": "^13.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^4.28.5",
    "joi": "^17.11.0",
    "jws": "^4.0.1",
    "nodemailer": "^7.0.13",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-linkedin-oauth2": "^2.0.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "qs": "^6.14.1",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.0.2",
    "stripe": "^14.10.0",
    "tar": "^7.5.7",
    "tiktoken": "^1.0.22",
    "typeorm": "^0.3.6",
    "uuid": "^9.0.1",
    "validator": "^13.15.26",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "src",
      "test"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "baseUrl": "./",
          "paths": {
            "@/*": [
              "src/*"
            ],
            "@modules/*": [
              "src/modules/*"
            ],
            "@common/*": [
              "src/common/*"
            ],
            "@config/*": [
              "src/config/*"
            ]
          }
        }
      }
    }
  }
}
