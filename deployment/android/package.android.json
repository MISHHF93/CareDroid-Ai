{
  "name": "CareDroid-Ai-Android",
  "private": true,
  "version": "1.0.0",
  "description": "CareDroid Clinical Companion - Native Android App with NestJS Backend",
  "type": "module",
  "scripts": {
    "backend:dev": "cd backend && npm install && npm run start:dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm run start:prod",
    "backend:test": "cd backend && npm test",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:release": "cd android && ./build-release.sh",
    "android:test": "cd android && ./gradlew test",
    "android:install": "cd android && ./gradlew installDebug",
    "android:validate": "cd android && ./validate-release.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "cleanup": "./cleanup-hybrid-files.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MISHHF93/CareDroid-Ai.git"
  },
  "keywords": [
    "android",
    "kotlin",
    "jetpack-compose",
    "medical",
    "healthcare",
    "ai",
    "hipaa",
    "nestjs",
    "native-app"
  ],
  "author": "CareDroid Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
