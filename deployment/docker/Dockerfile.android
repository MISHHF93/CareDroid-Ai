# Android Build & Emulator Container
FROM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV ANDROID_HOME=/opt/android-sdk
ENV PATH=$PATH:$ANDROID_HOME/cmdline-tools/latest/bin:$ANDROID_HOME/platform-tools:$ANDROID_HOME/emulator
ENV JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64

# Install base dependencies
RUN apt-get update && apt-get install -y \
    openjdk-17-jdk-headless \
    wget \
    unzip \
    git \
    curl \
    ca-certificates \
    libx11-6 \
    libxext6 \
    libxrender1 \
    libegl1 \
    libdbus-1-3 \
    libfontconfig1 \
    fontconfig-config \
    xvfb \
    vnc4server \
    x11-apps \
    openbox \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Create Android SDK directory
RUN mkdir -p $ANDROID_HOME

# Download and install Android SDK
RUN wget -q https://dl.google.com/android/repository/commandlinetools-linux-9477386_latest.zip -O /tmp/cmdline-tools.zip && \
    unzip -q /tmp/cmdline-tools.zip -d $ANDROID_HOME && \
    mkdir -p $ANDROID_HOME/cmdline-tools/latest && \
    mv $ANDROID_HOME/cmdline-tools/* $ANDROID_HOME/cmdline-tools/latest/ 2>/dev/null || true && \
    rm /tmp/cmdline-tools.zip

# Install Android components
RUN yes | sdkmanager --licenses && \
    sdkmanager --install "platform-tools" && \
    sdkmanager --install "platforms;android-35" && \
    sdkmanager --install "build-tools;35.0.0" && \
    sdkmanager --install "system-images;android-35;google_apis;x86_64" && \
    sdkmanager --install "emulator"

# Create Android Virtual Device (AVD)
RUN mkdir -p ~/.android && \
    echo "hw.lcd.density=420" > ~/.android/avd/emulator.avd/config.ini && \
    echo "hw.ramMB=2048" >> ~/.android/avd/emulator.avd/config.ini && \
    echo "hw.gpu.enabled=no" >> ~/.android/avd/emulator.avd/config.ini && \
    echo "hw.gpu.mode=off" >> ~/.android/avd/emulator.avd/config.ini

# Create AVD
RUN echo "no" | avdmanager create avd -n emulator -k "system-images;android-35;google_apis;x86_64" -b x86_64 -f

# Install Node.js and npm for building
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Expose VNC port
EXPOSE 5900 5037 8080

# Start VNC server and emulator
CMD ["bash", "-c", "Xvfb :0 -screen 0 1280x720x24 & vncserver :1 -geometry 1280x720 -depth 24 -localhost no & emulator -avd emulator -no-audio -no-boot-anim -gpu off -accel off & sleep infinity"]
