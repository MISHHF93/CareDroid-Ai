{
  "name": "CareDroid-Ai",
  "private": true,
  "version": "1.0.0",
  "description": "CareDroid-AI - Medical AI Clinical Co-Pilot Platform with Emergency Escalation & RBAC",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8000",
    "build": "vite build",
    "preview": "vite preview",
    "android-debug": "npm run build && npx cap sync android && cd android && .\\gradlew.bat assembleDebug",
    "android-release": "npm run build && npx cap sync android && cd android && .\\gradlew.bat assembleRelease",
    "backend:dev": "cd backend && npm run start:dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm run start:prod",
    "start:backend": "cd backend && npm run start:dev",
    "start:all": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\""
  },
  "dependencies": {
    "@capacitor/android": "^5.6.0",
    "@capacitor/core": "^5.6.0",
    "axios": "^1.7.8",
    "dexie": "^4.3.0",
    "firebase": "^10.12.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.4",
    "vite": "^7.3.1"
  }
}
